{
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": ["esnext"],
    "jsx": "preserve",
    "types": ["node"],
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "strict": true
    //"skipLibCheck": true
  },
  "include": ["./src/**/*"]
}

